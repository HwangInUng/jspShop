<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Psize">
	<insert id="insert" parameterType="java.util.List">
		insert into Psize(product_idx, psize_name)
		values
		<foreach collection="list" item="item" separator=",">
			(#{item.product.product_idx}, #{item.psize_name})
		</foreach>
	</insert>
	
	<select id="selectAll" resultType="Psize" parameterType="int">
		select * from psize where product_idx=#{product_idx}
	</select>
</mapper>